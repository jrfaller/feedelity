.page-header
  h1 Articles 
#form-feed
  form.form-inline(role='form', name='searchForm')
    .row
      .col-xs-4.col-xs-offset-3
        .form-group
          label.sr-only(for='text') Text
          .input-group
            input.input-sm.form-control#search-text(type="text", name="searchText", placeholder='Enter Text', size='40', ng-model="search.text") 
            span.input-group-btn
              button.input-sm.btn.btn-primary(type="button")
                i.glyphicon.glyphicon-search
                |  Search
      .col-xs-3
        .form-group
          select.input-sm.form-control#search-feed(name="searchFeed")
            option All
            option(ng-repeat='feed in feeds') {{feed.name}}
          button.btn.input-sm.btn-primary(type="button")
            i.glyphicon.glyphicon-filter
            |  Filter
      .col-xs-2
        button.input-sm.btn.btn-primary.pull-right(type="button", ng-click='refresh()')
          i.glyphicon.glyphicon-refresh
          |  Refresh
p(ng-show='articles.length == 0') No such articles.
.panel-group#accArticles
  .panel.panel-default(ng-repeat='article in articles')
    .panel-heading(ng-mouseenter='ensureRead($index)')
      h4(ng-class="(article.read == true) ? 'panel-title article-read' : 'panel-title'")
        a(data-toggle='collapse', data-parent='#accArticles', href="#article-{{$index}}", ng-click='ensureRead($index)', onclick='return false;') {{article.title}}
        small.pull-right.article-tb
          span {{article.date | timeago}}
          span
            span.label.label-primary {{article._feed[0].name}}
          span
            a(href="{{article.link}}", target='new')
              span.glyphicon.glyphicon-globe
          span
            a.glyphicon.glyphicon-eye-open(ng-click="read($index)")
          span
            a(ng-click="star($index)", ng-class="(article.starred == true) ? 'glyphicon glyphicon-star' : 'glyphicon glyphicon-star-empty'")
    .panel-collapse.collapse(id="article-{{$index}}")
      .panel-body
        div(ng-bind-html="article.summary")